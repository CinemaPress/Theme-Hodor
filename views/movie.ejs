<!doctype html>
<html lang="ru">
<head>

    <% include includes/head.ejs %>

</head>
<body>

<div id="wrapper">

    <div id="header">

        <% include includes/header.ejs %>

    </div>

    <div id="container">

        <div class="fullstory-content">
            <div id='dle-content'>
                <div class="full">
                    <div class="fullstory-drops">

                        <a href="<%- page.protocol %><%- page.domain %>">Главная</a> - <% if (movie.genres_url) { %><%- movie.genres_url %><% } else { %><%- movie.year_url %><% } %> - <%- movie.title_ru %>

                        <div style="float: right;color: #FFFFFF;"><div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="small" data-yashareQuickServices="vkontakte,facebook,twitter,odnoklassniki,moimir,gplus" data-yashareTheme="counter"></div></div>

                    </div>
                    <div id="left">
                        <div class="full-left">
                            <div class="full-poster">
                                <img src="<%- movie.poster %>" id="imgbigp" alt="<%- movie.title_ru %> (<%- movie.year %>)">
                            </div>
                            <div class="full-kino-info">
                                <% if (movie.kp_vote) { %>
                                <div><span>КиноПоиск:</span> <%- movie.kp_rating/10 %> (<%- movie.kp_vote %>)</div>
                                <% } %>
                                <% if (movie.imdb_vote) { %>
                                <div><span>IMDb:</span> <%- movie.imdb_rating/10 %> (<%- movie.imdb_vote %>)</div>
                                <% } %>
                                <% if (movie.countries_url) { %>
                                <div><span>Страна:</span> <%- movie.countries_url %></div>
                                <% } %>
                                <% if (movie.year_url) { %>
                                <div><span>Год:</span> <%- movie.year_url %></div>
                                <% } %>
                                <% if (movie.genres_url) { %>
                                <div><span>Жанр:</span> <%- movie.genres_url %></div>
                                <% } %>
                                <% if (movie.directors_url) { %>
                                <div><span>Режиссер:</span> <%- movie.directors_url %></div>
                                <% } %>
                            </div>
                            <% if (movie.actors_url) { %>
                            <div class="full-kino-info1"><span>В ролях:</span> <%- movie.actors_url %></div>
                            <% } %>
                        </div>

                        <a class="full_btn_podborka" href="<%- page.protocol %><%- page.domain %>/<%- page.urls.collection %>">Подборка фильмов</a>
                        <div class="best-film-block">
                            <ul class="best-film-menu">
                                <li><a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.year %>/2016">Лучшие фильмы 2016</a></li>
                                <li><a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.year %>/2015">Лучшие фильмы 2015</a></li>
                                <li><a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.year %>/2014">Лучшие фильмы 2014</a></li>
                            </ul>
                            <div class="best-icon"></div>
                        </div>

                        <% if (typeof soon == 'object' && soon.movies.length) { %>

                        <div class="full-title-scoro-block">
                            <%- soon.name %>
                        </div>
                        <div class="fullstory-content-slider-scoro">
                            <div id="full-slider-scoro">

                                <% soon.movies.forEach(function (movie) { %>

                                <div class="item-scoro">
                                    <a href="<%- movie.url %>">
                                        <img src="<%- movie.poster %>" alt="<%- movie.title_ru %> (<%- movie.year %>)">
                                        <div class="fullstory-slider-title-scoro"><%- movie.title_ru %> (<%- movie.year %>)</div>
                                    </a>
                                </div>

                                <% }); %>

                            </div>
                        </div>

                        <% } %>

                    </div>
                    <div id="right" class="story-video">
                        <div class="title-date-story">
                            <div class="full-kino-title">
                                <h1><%- movie.title_ru %> (<%- movie.year %>) смотреть онлайн 720 hd</h1>
                            </div>
                            <div class="full-kino-date">
                                <%- movie.premiere %>
                            </div>
                            <div class="full-kino-story disable_select">
                                <%- movie.description %>
                                <div style="text-align:center;">
                                    <h2><%- movie.title_ru %> (<%- movie.year %>) смотреть бесплатно в хорошем качестве hd 720</h2>
                                </div>
                            </div>
                        </div>

                        <div class="full-right-video1 watchLaterBlock" style="display: none;">
                            <span class="full-right-time"><span id="watchLater">Продолжить смотреть позже </span><b>?<i>Страница фильма будет запомнена, чтобы когда Вы вернётесь, смогли продолжить просмотр.</i></b></span>
                        </div>
                        <div class="section">
                            <ul class="tabss">
                                <li class="current">Фильм</li>
                                <li style="float: right;"><a href="<%- movie.url %>/<%- page.urls.movies.trailer %>">Трейлер</a></li>
                                <li style="float: right;"><a href="<%- movie.url %>/<%- page.urls.movies.online %>">Онлайн</a></li>
                            </ul>
                            <div class="box visible">
                                <% if (page.player) { %>
                                <%- page.player %>
                                <% } %>
                            </div>
                        </div>

                        <div class="full-screen">

                            <% if (movie.pictures.length) { %>

                            <% movie.pictures.forEach(function (picture) { %>

                            <div><a href="<%- movie.url %>/<%- page.urls.movies.picture %>"><img src="<%- picture.picture_min %>" alt=""></a></div>

                            <% }); %>

                            <% } %>

                        </div>

                        <div class="full-torrent">
                            <div class="full-torrent-title">
                                <a href="<%- movie.url %>/<%- page.urls.movies.download %>">
                                    <svg viewBox="36 2.2 133.2 133.4">
                                        <polygon points="169.2,106 154.4,106 154.4,120.8 50.8,120.8 50.8,106 36,106 36,135.6 169.2,135.6 "/>
                                        <path d="M80.4,2.2v29.6h-37l59.2,74l59.2-74h-37V2.2H80.4z M131,46.6l-28.4,35.6L74.2,46.6h21V17H110v29.6H131z"/>
                                    </svg>
                                    <%- movie.title_ru %> (<%- movie.year %>) Скачать с торрент бесплатно
                                </a>
                            </div>
                        </div>

                        <% if (typeof movies == 'object') { for (var type in movies) { if (movies.hasOwnProperty(type)) { %>

                        <% if (movies[type].length) { %>

                        <% movies[type].forEach(function (category) { %>

                        <div class="main-sliders-top1">
                            <div class="main-sliders-top-title">

                                <%- category.name %>

                            </div>
                        </div>

                        <div class="fullstory-content-slider">
                            <div class="full-related" style="display: none;">

                                <% if (category.movies.length) { %>

                                <% category.movies.forEach(function (movie) { %>

                                <div class="item">
                                    <a href="<%- movie.url %>">
                                        <img src="<%- movie.poster %>" alt="<%- movie.title_ru %> (<%- movie.year %>)">
                                        <div class="fullstory-slider-title"><%- movie.title_ru %> (<%- movie.year %>)</div>
                                    </a>
                                </div>

                                <% }); %>

                                <% } %>

                            </div>
                        </div>

                        <% }); %>

                        <% } %>

                        <% } } } %>

                        <% if (page.comments) { %>
                        <%- page.comments %>
                        <% } %>

                    </div>
                </div>
            </div>
        </div>
        <div class="vote-block"></div>
    </div>

    <div class="clear"></div>
    <div id="spacer"></div>

</div>

<div id="footer">

    <% include includes/footer.ejs %>

</div>

</body>
</html>